mysql -u root -p

create database bookStore;
create table Book (ISBN VARCHAR (13),BOOK_NAME VARCHAR (100),AUTHOR_NAME VARCHAR (50),PRICE DECIMAL(10,2), NUM_OF_COPIES INT, PRIMARY KEY (ISBN));
create table Book_Order (ORDER_ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY, CUSTOMER_NAME VARCHAR (100), PURCHASE_DATE DATE NOT NULL, AMOUNT DECIMAL(10,2));
create table Order_Detail (ORDER_ID INT, ISBN VARCHAR (13), QUANTITY INT, PRIMARY KEY (ORDER_ID,ISBN ), FOREIGN KEY (ORDER_ID) REFERENCES Book_Order(ORDER_ID), FOREIGN KEY (ISBN) REFERENCES Book(ISBN));
